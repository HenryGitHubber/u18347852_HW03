@model u18347852_HW03.Models.borrwauthortypeVM
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
   
    .update-button {
        color: #fff;
        background-color: #007BFF; 
        border-color: #007BFF; 
    }

   
    .delete-button {
        color: #fff;
        background-color: #DC3545; 
        border-color: #DC3545; 
    }

    .table:hover {
        cursor: pointer;
    }
</style>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css">
<div class="row">
    <div class="col-6">
        <!-- Author Table -->
        <p>
            <a href="#" class="create-link" data-url="@Url.Action("Create", "authors")">Create an Author</a>
        </p>
        <table class="table table-striped table-hover table-primary">
            <thead>
                <tr class="table-dark">
                    <th>Author ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody id="AuthorTable">
                @foreach (var item in Model.authors)
                {
                    <tr>
                        <td>@item.authorId</td>
                        <td>@item.name</td>
                        <td>@item.surname</td>
                        <td>
                            <a href="#" class="edit-link btn btn-primary update-button" data-url="@Url.Action("Edit", "authors", new {id = item.authorId})">Update</a>
                            <a href="#" class="delete-link btn btn-danger delete-button" data-url="@Url.Action("Delete", "authors", new {id = item.authorId})">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md-12 text-center">
            <div class="pagination" id="authorPagination">
                <button class="btn btn-secondary" id="prevAuthorPage">Previous</button>
                <span id="authorPageInfo">Page <span id="currentAuthorPage">1</span> of <span id="totalAuthorPages">1</span></span>
                <button class="btn btn-primary" id="nextAuthorPage">Next</button>
            </div>
        </div>
    </div>
    <div class="col-6">
        <!-- Types Table -->
        <p>
            <a href="#" class="create-book-link" data-url="@Url.Action("Create", "types")">Create Type</a>
        </p>
        <table class="table table-striped table-hover table-primary">
            <thead>
                <tr class="table-dark">
                    <th>Type ID</th>
                    <th>Name</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody id="TypeTable">
                @foreach (var item in Model.types)
                {
                    <tr>
                        <td>@item.typeId</td>
                        <td>@item.name</td>
                        <td>
                            <a href="#" class="edit-link btn btn-primary update-button" data-url="@Url.Action("Edit", "types", new {id = item.typeId})">Update</a>
                            <a href="#" class="delete-link btn btn-danger delete-button" data-url="@Url.Action("Delete", "types", new {id = item.typeId})">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pagination" id="typePagination">
            <button class="btn btn-secondary" id="prevTypePage">Previous</button>
            <span id="typePageInfo">Page <span id="currentTypePage">1</span> of <span id="totalTypePages">1</span></span>
            <button class="btn btn-primary" id="nextTypePage">Next</button>
        </div>
    </div>
</div>
<br />
<br />
<!--Borrows Table-->
<div class="container">
    <div class="row">
        <div class="col-12">
            <p>
                <a href="#" class="create-link" data-url="@Url.Action("Create", "borrows")">Create a Borrow</a>
            </p>
            <table class="table table-success table-striped ">
                <thead>
                    <tr class="table-dark">
                        <th>Borrow ID</th>
                        <th>Student ID</th>
                        <th>Book ID</th>
                        <th>Taken Date</th>
                        <th>Brought Date</th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody id="BorrowTable">
                    @foreach (var item in Model.borrows)
                    {
                        <tr>
                            <td>@item.borrowId</td>
                            <td>@item.studentId</td>
                            <td>@item.bookId</td>
                            <td>@item.takenDate</td>
                            <td>@item.broughtDate</td>
                            <td>
                                <a href="#" class="edit-link btn btn-primary update-button-button" data-url="@Url.Action("Edit", "borrows", new {id = item.borrowId})">Update</a>
                                <a href="#" class="delete-link btn btn-danger delete-button" data-url="@Url.Action("Delete", "borrows", new {id = item.borrowId})">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="col-md-12 text-center">
                <div class="pagination" id="borrowPagination">
                    <button class="btn btn-secondary" id="prevBorrowPage">Previous</button>
                    <span id="borrowPageInfo">Page <span id="currentBorrowPage">1</span> of <span id="totalBorrowPages">1</span></span>
                    <button class="btn btn-primary" id="nextBorrowPage">Next</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!------------------------------MODAL------------------------>
<div id="myModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">My Library</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modal-content">
            </div>
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/MyScript2.js"></script>

